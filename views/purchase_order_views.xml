<odoo>
    <record id="view_purchase_order_form_inherit_project" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.project</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group[@string='Other Information']" position="after">
                <group string="Proyecto">
                    <field name="project_id" domain="[('obra_nr', '!=', False)]"/>
                </group>
            </xpath>
        </field>
    </record>
</odoo>
