<odoo>
    <record id="view_order_form_inherit_project" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.project</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="priority" eval="161"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet//group[2]" position="after">
            <group name="proyecto_obra">
                <field name="project_id" invisible="1" string="Proyecto:" options="{'no_create': True, 'no_create_edit': True}" domain="[('company_id','=',company_id)]"/>
            </group>
        </xpath>
        </field>
    </record>
</odoo>

